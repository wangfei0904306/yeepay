					<!--<goal>build</goal>-->
					<!--</goals>-->
					<!--</execution>-->
					<!--<execution>-->
					<!--<id>push-docker-image-to-registry</id>-->
					<!--<phase>deploy-goho</phase>-->
					<!--<goals>-->
					<!--<goal>push</goal>-->
					<!--</goals>-->
					<!--</execution>-->
				</executions>
			</plugin>

		</plugins>
	</build>


</project>
